# Copy to .env and fill in. Do not commit .env.
# For GitHub Actions, add credentials as repository secrets.

# GraphQL target (VitalSync)
VITALSYNC_GRAPHQL_ENDPOINT=https://peterpm.vitalstats.app/api/v1/graphql
VITALSYNC_API_KEY=

# Legacy SQL source
LEGACY_SQL_SERVER=
LEGACY_SQL_DATABASE=PTPM
LEGACY_SQL_USER=
LEGACY_SQL_PASSWORD=
LEGACY_SQL_ENCRYPT=false
LEGACY_SQL_TRUST_CERT=true
LEGACY_SQL_POOL_MAX=5

# Sync runtime controls
SYNC_BATCH_SIZE=200
SYNC_MAX_BATCHES=1000
SYNC_GRAPHQL_MAX_RETRIES=3
